<body class = "login-body">

  <div class = "container-login">
    <div class = "form-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <p class ='label-forms'>Email</p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "inputfields", placeholder: "Email..." %>
        </div>

        <div class="field">
          <p class ='label-forms'>Password</p>
          <%= f.password_field :password, autocomplete: "current-password", class: "inputfields",
          placeholder: "Password..." %>
        </div>

          <div class="fields">
            <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>
            <div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end %>
            </div>
          </div>
       
        <div class="actions">
          <%= f.submit "Log in", class:'login-button' %>
        </div>
      <% end %>
    </div>
    <div class = "login-links">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end %>
    </div>
  </div>

</body>
